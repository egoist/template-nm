{
  "name": "<%= name %>",
  "version": "0.0.0",
  "description": "<%= description %>",
  "repository": {
    "url": "<%= username %>/<%= name %>",
    "type": "git"
  },
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "scripts": {
    "test": "<% if (unitTest) { %>jest<% } else { %>echo 'no tests!'<% } %><% if (eslint !== 'disable') { %> && npm run lint<% } %>"<% if (eslint !== 'disable') { %>,
    "lint": "<%= eslint %>"<%_ } %>
  },
  "author": "<%= username %> <<%= email %>>",
  "license": "MIT",
  <%_ if (unitTest) { -%>
  "jest": {
    "testEnvironment": "node"
  },
  <%_ } -%>
  "devDependencies": {<% if (unitTest) { %>
    "jest-cli": "^18.1.0"<% } %><% if (eslint === 'xo') { %><% if (unitTest) { %>,<% } %>
    "xo": "^0.17.1"<% } else if (eslint === 'standard') { %>,
    "standard": "^8.6.0"<% } %>
  }<% if (eslint === 'xo') { %>,
  "xo": {
    "space": 2,
    "semicolon": false<% if (unitTest) { %>,
    "envs": [
      "jest"
    ]
  }<%_ }} %>
}
